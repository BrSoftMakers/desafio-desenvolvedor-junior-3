{
    "openapi": "3.0.0",
    "info": {
        "title": "Blog API",
        "description": "Blog API documentation",
        "contact": {
            "email": "franklinramos@outllok.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3030/",
            "description": "local API server"
        }
    ],
    "paths": {
        "/register":{
            "post":{
                "summary": "Register a new user",
                "description": "Register a new user",
                "tags": [
                    "User"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Register"
                            },
                            "examples": {
                                "register": {
                                    "value": {
                                        "username": "user123",
                                        "password": "1234User",
                                        "name": "User"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "CREATED",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Token"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found"
                    },
                    "409": {
                        "description": "Conflict"
                    }
                }
            }
        },
        "/login":{
            "post":{
                "summary": "Login a user",
                "description": "Login a user",
                "tags": [
                    "User"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Login"
                            },
                            "examples": {
                                "login": {
                                    "value": {
                                        "username": "user",
                                        "password": "1234User"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Token"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        },
        "/validate":{
            "get":{
                "summary": "Validate a token",
                "description": "Validate a token",
                "tags": [
                    "User"
                ],
                "security": [{"ApiKeyAuth": [] }],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Register": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "Login": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "Token": { "type": "string" },
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string"
                    }
                }
             }
        },
        "securitySchemes": {
            "ApiKeyAuth":   {
                "type": "apiKey",
                "in": "header",
                "name": "authorization"
            }
        }
    }
}